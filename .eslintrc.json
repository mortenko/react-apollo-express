{
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "jest": true
  },
  "globals": {
    "ENV": true
  },
  "settings": {
    "pragma": "React",
    "version": "16.2",
    "flowVersion": "0.54.1"
  },
  "extends": ["eslint:recommended", "plugin:react/recommended", "plugin:import/errors", "plugin:import/warnings"],
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 8,
    "ecmaFeatures": {
      "jsx": true,
      "modules": true,
      "experimentalObjectRestSpread": true
    }
  },
  "rules": {
    "quotes": [1, "double"],
    "no-console": 1,
    "no-unused-vars": 0,
    "react/prop-types": 1,
    "react/no-find-dom-node": 0,
    "react/sort-comp": 1,
    "import/first":1
  }
}
